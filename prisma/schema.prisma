generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
    id      Int         @id @default(autoincrement())
    date    DateTime
    name    String
    venueId Int
    userId  Int
    capacity Int
    isPublished Boolean @default(false)

    venue       Venue       @relation(fields: [venueId], references: [id], onDelete: Cascade)
    user        User        @relation("plannerEvents", fields: [userId], references: [id], onDelete: Cascade)
    tickets     Ticket[]
    @@map("events")
}

model Venue {
    id      Int         @id @default(autoincrement())
    address String
    name    String
    capacity Int
    events Event[]
    @@map("venue")
}

model Ticket {
    id      Int         @id @default(autoincrement())
    eventId Int
    userId  Int
    admits  Int
    isUsed  Boolean @default(false)

    event       Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
    user        User        @relation("userTickets", fields: [userId], references: [id], onDelete: Cascade)
    @@map("ticket")
}

model User {
    id              Int         @id @default(autoincrement())
    firstName       String
    lastName        String
    email           String  
    passwordHash   String
    role userRole   @default(USER)

    tickets     Ticket[]    @relation("userTickets")
    events       Event[]    @relation("plannerEvents")
    @@map("user")
}

enum userRole{
  USER
  ADMIN
}